    <h1 id="title">Sample Bank Login — TRAINING ONLY</h1>
    <p class="note">This page is a simulated training page. Any submitted values will be displayed on-screen and not stored.</p>

    <form id="mockForm" onsubmit="return handleSubmit(event)" autocomplete="off" novalidate>
      <label for="user">User ID</label>
      <input id="user" name="user" type="text" inputmode="text" placeholder="e.g. user123">

      <label for="pin">Password / PIN</label>
      <input id="pin" name="pin" type="password" placeholder="Enter training password">

      <button type="submit">Sign in (Training)</button>

      <div id="result" class="result" aria-live="polite"></div>
    </form>

    <div class="foot">Purpose: security training. Do not use with real credentials.</div>
  </div>

  <script>
    function handleSubmit(e){
      e.preventDefault();
      const u = document.getElementById('user').value || '(empty)';
      const p = document.getElementById('pin').value ? '••••••' : '(empty)';
      const r = document.getElementById('result');
      r.style.display = 'block';
      r.innerHTML = '<strong>Submitted (training only):</strong><br>User ID: '
                    + escapeHtml(u) + '<br>Password (masked): ' + escapeHtml(p);
      // NOTE: in real training, log to a local file or monitoring tool with consent.
      return false;
    }
    function escapeHtml(s){ return s.replace(/[&<>"']/g, c => ({'&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;',"'":'&#39;'}[c])); }
  </script>
